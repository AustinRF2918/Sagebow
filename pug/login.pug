html
  head
    include utility/_boilerplate.pug
    script(src="res/js/login_app.js")
    
  include utility/_modalWindow-mixins.pug
  body
    .full-background
    .full-container
      .primary-container-login
        .row.no-margin-mobile
          .col-lg-12
            i(class=["fa", "fa-tree fa-2x"] aria-hidden="true")
        .row.m-t-1.no-margin-mobile
          .col-lg-6
            h1.light-text Welcome back to Sagebow.
        .row.m-t-1.no-margin-mobile
          .col-lg-12.p-y-2
            div.cta-container
              .row
                .col-lg-5.extend-full-height
                  .email-address-container
                    .form-group
                      input#username.required.form-control.materialize-form(type="text", placeholder="Enter your username")
                      label.label(for="username") Username:
                .col-lg-5.extend-full-height
                  div.password-container
                    .form-group
                      input#password.required.form-control.materialize-form(type="password", placeholder="Enter your password")
                      label.label(for="password") Password:
                .col-lg-2
                  div.login-container
                    .form-group
                      a.btn.btn-login Login
                      label(class=["consistency-hide"] for="btn") Password:
              .row
                .col-lg-5.m.t-1.extend-full-height-absolute
                  div
                    .form-group
                      a.btn.btn-make-account(href="/setup") Create a new account.
                      
